{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build C#",
            "type": "shell",
            "command": "csc",
            "args": [
                "${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run C#",
            "type": "shell",
            "command": "mono",
            "args": [
                "${fileDirname}/${fileBasenameNoExtension}.exe"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}